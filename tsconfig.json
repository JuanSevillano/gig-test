{
  "compilerOptions": {
    "lib": ["es2018", "DOM"],
    "module": "es6",
    "target": "es5",
    "outDir": "./build/",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
